#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "Default Layer";
// ---------------------------------------------------------------------------------------------
// | ESC  | 1  | 2  | 3   | 4   | 5     |                  | 6  | 7     | 8   | 9  | 0  | BSPC |
// | TAB  | Q  | W  | E   | R   | T     |                  | Y  | U     | I   | O  | P  | [    |
// | CAPS | A  | S  | D   | F   | G     |                  | H  | J     | K   | L  | ;  | '    |
// | \    | Z  | X  | C   | V   | B     | GRAVE |  | MUTE  | N  | M     | ,   | .  | /  | ]    |
//                  | GUI | ALT | SHIFT | SPACE |  | ENTER | L1 | RCTRL | GUI |
            bindings = <
&kp ESC   &kp N1 &kp N2 &kp N3   &kp N4   &kp N5                          &kp N6 &kp N7    &kp N8    &kp N9  &kp N0   &kp BSPC
&kp TAB   &kp Q  &kp W  &kp E    &kp R    &kp T                           &kp Y  &kp U     &kp I     &kp O   &kp P    &kp LBKT
&kp LCTRL &kp A  &kp S  &kp D    &kp F    &kp G                           &kp H  &kp J     &kp K     &kp L   &kp SEMI &kp SQT
&kp BSLH  &kp Z  &kp X  &kp C    &kp V    &kp B     &kp GRAVE  &kp C_MUTE &kp N  &kp M     &kp COMMA &kp DOT &kp FSLH &kp RBKT
                        &kp LGUI &kp LALT &kp LSHFT &kp SPACE  &kp RET    &mo 1  &kp RCTRL &kp RGUI
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        layer_1 {
            display-name = "Layer 1";
// ---------------------------------------------------------------------------------------------------
// |       | F1  | F2  | F3  | F4 | F5 |                   | F6   | F7   | F8  | F9    | F10   | DEL |
// |       | F11 | F12 |     |    |    |                   |      | HOME | END | MINUS | EQUAL |     |
// |       |     |     |     |    |    |                   | LEFT | DOWN | UP  | RIGHT |       |     |
// | BTCLR | BT1 | BT2 | BT3 |    |    |    |         |    |      |      |     |       |       |     |
//                     |     |    |    |    |         |    |      |      |     |
            bindings = <
&trans     &kp F1       &kp F2       &kp F3       &kp F4 &kp F5                &kp F6   &kp F7   &kp F8  &kp F9    &kp F10   &kp DEL
&trans     &kp F11      &kp F12      &trans       &trans &trans                &trans   &kp HOME &kp END &kp MINUS &kp EQUAL &trans
&trans     &trans       &trans       &trans       &trans &trans                &kp LEFT &kp DOWN &kp UP  &kp RIGHT &trans    &trans
&bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &trans &trans &trans  &trans &trans   &trans   &trans  &trans    &trans    &trans
                                     &trans       &trans &trans &trans  &trans &trans   &trans   &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
    };
};
